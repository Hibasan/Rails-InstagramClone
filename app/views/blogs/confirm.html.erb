<%= render partial: 'users/header' %>
<div class="main_container">
  <%= render partial: 'users/left' %>
  <h3>以下の内容で、投稿する。</h3>
  <%= form_with(model: @blog, local: true,url: choose_new_or_edit) do |form| %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image %>
  <p>本文:<%= @blog.content %></p>
  <p>添付:</p>
  <%= image_tag(@blog.image.url) if @blog.image && @blog.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit  "投稿" %>
  <% end %>
  <%= form_with(model:@blog,  local:true, url:new_blog_path, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "戻る", name: "back" %>
  <% end %>
</div>
